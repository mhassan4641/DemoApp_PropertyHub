@model CountryModel

@{ 
    List<SelectListItem> countries = (List<SelectListItem>)ViewData["countries"];
}

<form asp-action="edit" asp-controller="Country" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text"><i class="fa fa-product-hunt"></i></label>
            </span>
            <input type="text" class="form-control" asp-for="Code" placeholder="Country Code" />
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text"><i class="fa fa-map-marker"></i></label>
            </span>
            <input type="text" class="form-control" asp-for="Name" placeholder="Country Name" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save"></i>Update
    </button>

</form>
