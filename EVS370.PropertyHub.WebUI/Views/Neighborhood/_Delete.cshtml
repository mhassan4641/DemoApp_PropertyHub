@model NeighborhoodModel

    <form id="deleteform" asp-action="delete" asp-controller="Neighborhood" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label>Name:</label>
                </div>
                <div class="col-8">
                    @Model.Name
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label>City:</label>
                </div>
                <div class="col-8">
                    @Model.City.Name
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label>Image:</label>
                </div>
                <div class="col-4">
                    <img src="data:image/jpg;base64,@Model.Image" alt="image" class="w-100" />
                </div>               
            </div>
        </div>



        <div class="form-group" style="margin-top:15px;">
            <button id="yesbutton" type="submit" class="btn btn-danger"><i class="fa fa-check"></i>&nbsp; Yes </button>
            <button id="nobutton" type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i>&nbsp; No </button>
        </div>
    </form>