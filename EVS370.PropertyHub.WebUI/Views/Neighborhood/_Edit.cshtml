@model NeighborhoodModel

@{
    List<SelectListItem> cities = (List<SelectListItem>)ViewData["Cities"];
}
<form id="createform" asp-action="edit" asp-controller="Neighborhood" method="post" enctype="multipart/form-data" >

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text" for="loginid"><i class="fa fa-product-hunt"></i></label>
            </span>
            <input id="nametxt" type="text" class="form-control" asp-for="Name" placeholder="Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text" for="loginid"><i class="fa fa-map-marker"></i></label>
            </span>
            <select class="form-control" asp-for="City.Id" asp-items="cities">
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <img src="data:image/jpg;base64,@Model.Image" alt="image" class="w-100" />
            </div>
            <div class="col-8">
                <label>Edit Image</label>
                <input name="photo" type="file" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark">
            <i class="fa fa-arrow-circle-right"></i>  Save
        </button>
    </div>
</form>
